#!/bin/bash -ex
cd /
if [ ! -d data ]; then
    sudo mkdir data
fi
cd data
if [ ! -d ibeis ]; then
    sudo mkdir ibeis
    sudo chown ubuntu ibeis
fi
cd /opt/ibeis/ibeis
./super_setup.py --pull
sudo rm -rf ~/.theano
if [ ! -f /dev/raw1394 ]; then
    sudo ln /dev/null /dev/raw1394
fi
./dev.py --set-workdir /data/ibeis/
./reset_dbs.py --reset-all
sudo rm -rf failed_doctests.txt
./run_tests.py
